{
    "openapi": "3.0.0",
    "info": {
        "title": "OH Sansi API",
        "description": "Documentación de la API para OH Sansi.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "Servidor local"
        },
        {
            "url": "{APP_URL}",
            "description": "Servidor local",
            "variables": {
                "APP_URL": {
                    "default": "http://localhost:8000",
                    "description": "URL base de la aplicación"
                }
            }
        }
    ],
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Registro de usuario",
                "description": "Crea un nuevo usuario en el sistema",
                "operationId": "8e4e3cb7b46126f4696379d3c7eeb4ad",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "ci",
                                    "phone_number",
                                    "genre",
                                    "roles_id"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "Maria"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Perez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "maria@example.com"
                                    },
                                    "ci": {
                                        "type": "string",
                                        "example": "12345678"
                                    },
                                    "phone_number": {
                                        "type": "string",
                                        "example": "71717717"
                                    },
                                    "genre": {
                                        "type": "string",
                                        "enum": [
                                            "masculino",
                                            "femenino"
                                        ],
                                        "example": "femenino"
                                    },
                                    "roles_id": {
                                        "type": "integer",
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User registration successfully"
                                        },
                                        "acces_token": {
                                            "type": "string",
                                            "example": "2|gfdsgsgfsgsgf..."
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error de validación"
                    },
                    "500": {
                        "description": "Error al crear el usuario"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Iniciar sesión",
                "description": "Autenticar usuario y devolver token",
                "operationId": "222b2625838e3c57e017987f73598fda",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "maria@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "MP12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "2|gfdsgsgfsgsgf..."
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Autenticación"
                ],
                "summary": "Cerrar sesión",
                "description": "Elimina el token del usuario autenticado",
                "operationId": "ad65cbbd4e9f201619eae184a5961a98",
                "responses": {
                    "200": {
                        "description": "Logout exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logged out successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/competitors/upload-csv": {
            "post": {
                "tags": [
                    "Competitors"
                ],
                "summary": "Subir CSV de competidores",
                "description": "Sube uno o varios archivos CSV y procesa participantes, tutores, colegios y sus inscripciones. Cabeceras esperadas: N. (opcional), DOC., NOMBRE, GEN, DEP., COLEGIO, CELULAR, E-MAIL, AREA, NIVEL, GRADO. AREA admite múltiples valores separados por coma, punto y coma o barra vertical. Si se envían file y files a la vez, se prioriza files.",
                "operationId": "uploadCompetitorsCsv",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/CompetitorUploadForm"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Procesamiento de archivos CSV finalizado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CompetitorUploadResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Error de validación o archivo faltante",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "$ref": "#/components/schemas/MissingFileError"
                                        },
                                        {
                                            "$ref": "#/components/schemas/ValidationError"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CompetitorRowError": {
                "required": [
                    "message"
                ],
                "properties": {
                    "row": {
                        "description": "Número de fila en el CSV (1-index).",
                        "type": "integer",
                        "example": 5,
                        "nullable": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Faltan campos obligatorios en la fila."
                    }
                },
                "type": "object"
            },
            "CompetitorStats": {
                "required": [
                    "processed",
                    "created_contestants",
                    "updated_contestants",
                    "created_inscriptions",
                    "skipped_duplicate_area",
                    "errors"
                ],
                "properties": {
                    "processed": {
                        "type": "integer",
                        "example": 12
                    },
                    "created_contestants": {
                        "type": "integer",
                        "example": 8
                    },
                    "updated_contestants": {
                        "type": "integer",
                        "example": 4
                    },
                    "created_inscriptions": {
                        "type": "integer",
                        "example": 10
                    },
                    "skipped_duplicate_area": {
                        "type": "integer",
                        "example": 2
                    },
                    "errors": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CompetitorRowError"
                        }
                    }
                },
                "type": "object"
            },
            "CompetitorFileResult": {
                "required": [
                    "mensaje"
                ],
                "properties": {
                    "archivo": {
                        "type": "string",
                        "example": "competitors.csv",
                        "nullable": true
                    },
                    "mensaje": {
                        "type": "string",
                        "example": "Archivo procesado correctamente."
                    },
                    "estadisticas": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/CompetitorStats"
                            }
                        ],
                        "nullable": true
                    },
                    "errores": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Faltan columnas obligatorias."
                                },
                                "missing_headers": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "nullable": true
                                }
                            },
                            "type": "object"
                        },
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "CompetitorUploadResponse": {
                "required": [
                    "message",
                    "resultados"
                ],
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Procesamiento de archivos CSV finalizado."
                    },
                    "resultados": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CompetitorFileResult"
                        }
                    }
                },
                "type": "object"
            },
            "MissingFileError": {
                "required": [
                    "message"
                ],
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "No se recibió ningún archivo. Envíe uno o más archivos CSV."
                    }
                },
                "type": "object"
            },
            "ValidationError": {
                "required": [
                    "message",
                    "errors"
                ],
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Archivo(s) inválido(s). Solo se permiten archivos .csv."
                    },
                    "errors": {
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "CompetitorUploadForm": {
                "description": "Formulario para subir uno o varios archivos CSV.",
                "properties": {
                    "file": {
                        "description": "Archivo CSV (alternativa a 'files').",
                        "type": "string",
                        "format": "binary"
                    },
                    "files": {
                        "description": "Varios archivos CSV.",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "format": "binary"
                        }
                    }
                },
                "type": "object"
            }
        },
        "requestBodies": {
            "uploadCsv": {
                "required": true,
                "content": {
                    "multipart/form-data": {
                        "schema": {
                            "$ref": "#/components/schemas/CompetitorUploadForm"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Competitors",
            "description": "Operaciones relacionadas con competidores"
        },
        {
            "name": "Autenticación",
            "description": "Autenticación"
        }
    ]
}